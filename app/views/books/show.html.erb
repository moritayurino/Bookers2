<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
  <% end %>
  <% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
      <p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/book', users: @users %>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
      <thead>
      <tr>
      <th><%= image_tag @book.user.get_profile_image(100, 100) %></th>
      <th></th>
      <th><%= @book.title %></th>
      <th><%= @book.body %></th>
      <th><%= link_to "Edit", edit_book_path(@book.id), method: :get, class:"btn btn-outline-secondary edit_book_path" %></th>
      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-outline-secondary books_path" %></th>
      </tr>
      </thead>
  <tbody>
  </tbody>
</table>
      <th colspan="3">
    </div>
  </div>
</div>
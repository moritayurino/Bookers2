<p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
        <%= image_tag @user.get_profile_image(100, 100) %></tr>
  <tr>
	  <th>name</th>
	  <th>
	  <%= @user.name %></th>
	</tr>
	<tr>
	  <th>introduction</th>
	  <th>
	  <%= @user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block edit_user_path" do %>
    <i class="fas fa-user-cog"></i>
    <% end %></div>
<br>
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h2>New book</h2>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <p></p>
    <%= f.submit 'Create Book' %>
    <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th></tr>
      <% @books.each do |book| %>
      <tr>
      <th><%= image_tag book.user.get_profile_image(100, 100) %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <% end %>
      <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
  </tbody>
</table>
    </div>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
         <script src="https://kit.fontawesome.com/fd20c589ae.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li><%= link_to user_path(current_user.id), class: "nav-link text-light" do %>Home
              <i class="fa-solid fa-home"></i><% end %></li>
            <li><%= link_to users_path, class: "nav-link text-light" do %>Users
              <i class="fa-solid fa-users"></i><% end %></li>
            <li><%= link_to books_path, class: "nav-link text-light" do %>Books
              <i class="fa-solid fa-book-open"></i><% end %></li>
            <li><%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>Log out
              <i class="fa-solid fa-sign-out-alt"></i><% end %></li>
            <% else %>
            <li><%= link_to root_path, class: 'nav-link text-light' do %>Home
              <i class="fa-solid fa-home"></i><% end %></li>
            <li><%= link_to about_path, class: 'nav-link text-light' do %>About
              <i class="fa-solid fa-link"></i><% end %></li>
            <li><%= link_to new_user_registration_path, class: 'nav-link text-light' do %>Sign up
            <i class="fa-solid fa-user-plus"></i><% end %></li>
            <li><%= link_to new_user_session_path, class: 'nav-link text-light' do %>Log in
              <i class="fa-solid fa-sign-in-alt"></i><% end %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>

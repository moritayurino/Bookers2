<p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user, url: '/users', method: :post do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p></p>
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p></p>
        <p>Introduction</p>
        <%= f.text_area :introduction %>
        <p></p>
        <%= f.submit 'Update User' %>
        <% end %>
        </diV>
      </div>
    </div>
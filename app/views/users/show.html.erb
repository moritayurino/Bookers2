<% if flash[:notice].present? %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:success_login].present? %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:success_update] %>
  <div class="alert alert-success">
    <%= flash[:success_update] %>
  </div>
<% end %>
<p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/book', users: @users %>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th></tr>
      
      <% @books.each do |book| %>
      <tr>
      <th><%= image_tag book.user.get_profile_image(100, 100) %></th>
      <th><%= link_to book.title, "/books/#{book.id}" %></th>
      <th><%= book.body %></th>
      <% end %>
      <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
  </tbody>
</table>
    </div>
  </div>
</div>
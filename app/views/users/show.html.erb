<% if flash[:notice].present? %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:success_login].present? %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:success_update] %>
  <div class="alert alert-success">
    <%= flash[:success_update] %>
  </div>
<% end %>
<p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render partial: 'users/book', locals: {user: @user, book: @book} %>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th></tr>
      </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
      <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
      <td><%= link_to book.title, "/books/#{book.id}" %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
      <tr>
      <td colspan="3"></td>
      </tr>
  </tbody>
</table>
    </div>
  </div>
</div>